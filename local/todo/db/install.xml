<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/todo/db" VERSION="20171114"
       COMMENT="XMLDB file for Moodle local/todo/db"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="todo" COMMENT="Each record is a message">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="todo_text" TYPE="text"  NOTNULL="true"  SEQUENCE="false"/>
        <FIELD NAME="todo_type" TYPE="text"  NOTNULL="true"  SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>


  </TABLES>
</XMLDB>